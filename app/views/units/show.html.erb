<div class="p-3 m-3 d-flex flex-column align-items-center justify-content-center">
  <div class="display-card">
    <div class="d-flex justify-content-center align-items-center">
      <h3 class="text-center m-0"><%= @unit.course.name %>: <%= @unit.name %></h3>
      <%= link_to edit_unit_path(@unit), class: "btn" do %>
        <i class="fa-solid fa-pen-to-square text-secondary"></i>
      <% end %>
      <%= link_to unit_path(@unit),
            class: "btn",
            data: { "turbo-method": :delete,
            turbo_confirm: "Are you sure you want to delete this unit?" } do %>
        <i class="fa-solid fa-trash-can text-secondary"></i>
      <% end %>
    </div>
    <hr>
    <h5>Unit Details</h5>
    <p><%= @unit.details %></p>
    <hr>
    <h5>Current Lessons</h5>
    <div class="d-flex flex-column justify-content-center align-items-center gap-1">
      <% @unit.lessons.each do |lesson| %>
        <%= link_to lesson.name, lesson_path(lesson), class: "btn btn-gradient w-100" %>
      <% end %>
      <%= link_to "+ Add a new lesson for this unit",
        new_unit_lesson_path(@unit),
        class: "btn btn-ghost w-100 mt-3" %>
    </div>
  </div>
</div>
<div class="d-flex align-items-center justify-content-center flex">
  <%= link_to "< Back to courses", courses_path, class: "btn btn-ghost-2 h1" %>
  <%= link_to "< Back to units", course_path(@unit.course), class: "btn btn-ghost-2 h1" %>
</div>
