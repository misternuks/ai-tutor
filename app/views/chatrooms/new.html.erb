<div class="d-flex flex-column align-items-center justify-content-center">
  <div class="display-card m-3 d-flex flex-column align-items-center justify-content-center">
    <h1 class="text-center">Create a new chatroom?</h1>
    <%= simple_form_for [@lesson, @chatroom] do |f| %>
      <%= f.hidden_field :name, value: @chatroom.name  %>
      <%= f.button :submit, class: "btn btn-gradient" %>
    <% end %>
  </div>
  <%= link_to "< Back", lesson_chatrooms_path(@lesson), class: "btn btn-ghost-2"  %>
</div>
